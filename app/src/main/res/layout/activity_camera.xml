<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/YELLOW"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_weight="1"
        android:id="@+id/camera_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </SurfaceView>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/camera_imageButton_gallery"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/img_camera_galeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/camera_imageButton_take"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/button_camera_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/camera_imageButton_change"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/img_camera_mudar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

    </LinearLayout>

</LinearLayout>