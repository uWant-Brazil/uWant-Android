<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="158dp"
    android:layout_height="180dp">

    <GridLayout
        android:layout_gravity="left|top"
        android:id="@+id/adapter_wishlist_gridlayout_pictures"
        android:background="@drawable/wishlist_adapter_background"
        android:rowCount="2"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.CardView
            android:layout_width="65dp"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adapter_wishlist_imageView1" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="65dp"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adapter_wishlist_imageView2" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="65dp"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adapter_wishlist_imageView3" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="65dp"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:id="@+id/adapter_wishlist_imageView4" />

        </android.support.v7.widget.CardView>

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_wishlist_imageView_products"
        android:src="@drawable/ic_perfil_semfoto"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_wishlist_progressBar"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:background="@color/GRAY_WITH_TRANSPARENCY_BACKGROUND"
        android:layout_gravity="left|top|right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wish List Name"
            android:textSize="12sp"
            android:textColor="@color/WHITE"
            android:id="@+id/adapter_wishlist_textView_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_wishlist_imageView_popup"
            android:src="@drawable/abc_ic_menu_moreoverflow_normal_holo_dark" />

    </LinearLayout>

</FrameLayout>