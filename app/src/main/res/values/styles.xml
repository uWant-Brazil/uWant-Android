<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/uWant">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeActionBar" parent="@style/uWant">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyTheme.ActionBar.TabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.MyTheme.Widget</item>
    </style>

    <style name="Theme.MyTheme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@android:color/white</item>
        <!-- your other custom widget styles -->
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/YELLOW</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/uwant_tab_indicator_holo</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/WHITE</item>
    </style>

    <style name="MyTheme.ActionBar.TabTextStyle" parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="UWEditText">
        <item name="android:textColor">@color/GRAY_TEXT</item>
        <item name="android:textColorHint">@color/GRAY_FIELD_BORDER</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
